<?xml version="1.0" encoding="UTF-8"?>
<?language javascript?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox fx:id="vbox" layoutX="0.0" layoutY="0.0" prefHeight="400.0"
      prefWidth="400.0" spacing="0" xmlns:fx="http://javafx.com/fxml/1"
      xmlns="http://javafx.com/javafx/2.2">

    <fx:script>
        var packages = new JavaImporter(java.nio.file.Path, java.nio.file.Files, java.lang.String, java.lang.StringBuilder, java.util.stream.Stream, java.nio.charset.StandardCharsets);
        function wzruszajace(event) {
            var text;
            with (packages) {
                var path = Path.of("C:\\Users\\grzes\\OneDrive\\Pulpit\\wishes\\wzruszajace.txt");
                text = Files.readString(path);
            }
            outputText.setText(text.replace("user", inputText.getText()));

        }

        function urodzinowe(event) {
            var text;
            with (packages) {
                var path = Path.of("C:\\Users\\grzes\\OneDrive\\Pulpit\\wishes\\urodziny.txt");
                text = Files.readString(path);
            }
            outputText.setText(text.replace("user", inputText.getText()));
        }

        function powazne(event) {
            var text;
            with (packages) {
                var path = Path.of("C:\\Users\\grzes\\OneDrive\\Pulpit\\wishes\\powzne.txt");
                text = Files.readString(path);
            }
            outputText.setText(text.replace("user", inputText.getText()));
        }


    </fx:script>
    <children>

        <Label fx:id="inputLbl" alignment="CENTER_LEFT" cache="true"
               cacheHint="SCALE" prefHeight="30.0" prefWidth="200.0"
               text="Please insert Your Input here:" textAlignment="LEFT"/>
        <TextField fx:id="inputText" prefWidth="100.0"/>

        <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20 20 20 20;">
            <Button fx:id="urodziny" alignment="CENTER_RIGHT"
                    contentDisplay="CENTER" mnemonicParsing="false"
                    onAction="urodzinowe(event);" text="urodziny" textAlignment="CENTER"/>

            <Button fx:id="powazne" alignment="CENTER"
                    contentDisplay="CENTER" mnemonicParsing="false"
                    onAction="powazne(event);" text="powazne" textAlignment="CENTER"/>

            <Button fx:id="wzruszajace" alignment="CENTER_LEFT"
                    contentDisplay="CENTER" mnemonicParsing="false"
                    onAction="wzruszajace(event);" text="wzruszajace" textAlignment="CENTER"/>

        </HBox>
        <HBox alignment="CENTER">
            <Button fx:id="theme" alignment="CENTER"
                    contentDisplay="CENTER" mnemonicParsing="false"
                    onAction="wzruszajace(event);" text="change theme" textAlignment="CENTER"/>
        </HBox>
        <Label fx:id="outputLbl" alignment="CENTER_LEFT" cache="true"
               cacheHint="SCALE" prefHeight="30.0" prefWidth="200.0"
               text="Your Input:" textAlignment="LEFT"/>
        <TextArea fx:id="outputText" prefHeight="200.0"
                  prefWidth="200.0" wrapText="true"/>
    </children>
</VBox>
